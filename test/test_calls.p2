    testGroovyStyleCall {
        println("Test ... Groovy type function calls")
        // declarations
		blah { {void->void} closure ->
            closure()
        }
        blah { int a, {void->void} closure ->
            closure()
        }
        blah <T> { {T->void} closure ->
            closure(1)
        }
		//calls
        blah()      { println("hello") }
        blah(1)     { println("hello2") }
		blah<int>() { a-> println("hello3") }
    }
